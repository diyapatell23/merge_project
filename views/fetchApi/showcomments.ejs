<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        #name{
            text-align: center;
            font-size: 30px;
            margin-top: 50px;
        }
        #task{
            text-align: center;
            font-size: 20px;
            margin-top: 20px;
        }
    </style>
    <title>Document</title>
</head>
<body>
    <p id="name">Diya Patel(24DEV069)</p>
    <p id="task">Fetch Api</p>
    <table border="1">
        <thead>
        <tr>
            <td>PostId</td>
            <td>Id</td>
            <td>Name</td>
            <td>Email</td>
            <td>Body</td>
        </tr>
        </thead>
        <tbody id="data">
            
        </tbody>
    </table>

    <script>
        const searchparams = new URLSearchParams(window.location.search);
        const id = searchparams.get("id");
        let url = `https://jsonplaceholder.typicode.com/posts/${id}/comments`;

        let data = [];

        async function fetchdata() {
            const response = await fetch(url);
            data = await response.json();
            showusers();
        }

        fetchdata();

        function showusers() {
            if (data.length >0 ) {
                var temp = "";
                data.forEach((userdata) => {
                    temp += "<tr>";
                    temp += "<td >" + userdata.postId + "</td>";
                    temp += "<td >" + userdata.id + "</td>";
                    temp += "<td>" + userdata.name + "</td>";
                    temp += "<td>" + userdata.email + "</td>";
                    temp += "<td>" + userdata.body + "</td>";
                });
                document.getElementById('data').innerHTML = temp;
            }
        }
    </script>
</body>
</html>